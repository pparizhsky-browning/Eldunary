---
interface Props {
  name: string;
  slug: string;
  kingdom?: string;
  population?: number | string;
  outsider_friendliness?: string;
  summary?: string;
  accentColor?: string;
}
const { name, slug, kingdom, population, outsider_friendliness, summary, accentColor } = Astro.props;
---
<a href={`/cities/${slug}`} class="city-card" style={accentColor ? `--card-accent: ${accentColor}` : ''}>
  <div class="card-glow" aria-hidden="true" style={accentColor ? `background: radial-gradient(circle at 100% 0%, ${accentColor}10, transparent 70%)` : ''}></div>
  <div class="card-header">
    <span class="card-type">City</span>
    {outsider_friendliness && <span class="friendliness">{outsider_friendliness}</span>}
  </div>
  <h3 class="card-name">{name}</h3>
  <div class="city-meta">
    {kingdom && <span class="meta-item">üè∞ {kingdom}</span>}
    {population && <span class="meta-item">üë• {typeof population === 'number' ? population.toLocaleString() : population}</span>}
  </div>
  {summary && <p class="card-summary">{summary}</p>}
  <div class="card-footer">
    <span class="visit-link">Visit Settlement</span>
  </div>
</a>

<style>
  .city-card {
    display: flex; flex-direction: column;
    background: rgba(20, 20, 25, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1.75rem;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }
  .card-glow {
    position: absolute;
    inset: 0;
    pointer-events: none;
    transition: opacity 0.4s ease;
    opacity: 0.3;
  }
  .city-card:hover {
    transform: translateY(-8px);
    border-color: var(--card-accent, var(--accent));
    background: rgba(26, 26, 32, 0.9);
    box-shadow: 0 20px 40px rgba(0,0,0,0.4);
  }
  .city-card::after {
    content: "";
    position: absolute;
    top: 0; left: 0; right: 0; height: 3px;
    background: var(--card-accent, var(--accent));
    transform: scaleX(0);
    transition: transform 0.4s ease;
    transform-origin: left;
  }
  .city-card:hover::after { transform: scaleX(1); }
  .city-card:hover .card-glow { opacity: 0.8; }

  .card-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.25rem; position: relative; z-index: 1; }
  .card-type {
    font-size: 0.7rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--card-accent, var(--accent));
    background: color-mix(in srgb, var(--card-accent, var(--accent)), transparent 92%);
    padding: 2px 8px;
    border-radius: 4px;
    border: 1px solid color-mix(in srgb, var(--card-accent, var(--accent)), transparent 80%);
  }
  .friendliness { 
    font-size: 0.65rem; 
    font-weight: 700;
    text-transform: uppercase;
    color: #666; 
    background: rgba(255,255,255,0.04); 
    padding: 2px 8px; 
    border-radius: 4px;
    border: 1px solid rgba(255,255,255,0.08);
  }
  .card-name {
    font-family: var(--font-cinzel), serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 0.75rem;
    position: relative;
    z-index: 1;
    transition: color 0.3s ease;
  }
  .city-card:hover .card-name { color: var(--card-accent, var(--accent)); }
  
  .city-meta { display: flex; gap: 1rem; margin-bottom: 1rem; position: relative; z-index: 1; }
  .meta-item { font-size: 0.8rem; color: #888; display: flex; align-items: center; gap: 0.3rem; font-weight: 500; }

  .card-summary {
    font-family: var(--font-lora), serif;
    font-size: 0.95rem;
    color: #71717A;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    position: relative;
    z-index: 1;
    font-style: italic;
  }
  .card-footer {
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid rgba(255,255,255,0.05);
    position: relative;
    z-index: 1;
  }
  .visit-link {
    font-size: 0.75rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #444;
    transition: all 0.3s ease;
  }
  .city-card:hover .visit-link { color: var(--card-accent, var(--accent)); padding-left: 5px; }
</style>
