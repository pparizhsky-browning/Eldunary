---
interface Props {
  name: string;
  slug: string;
  type: string;
  summary?: string;
  accentColor?: string;
  meta?: string;
}

const { name, slug, type, summary, accentColor, meta } = Astro.props;

const typeToPath: Record<string, string> = {
  race: 'races', kingdom: 'kingdoms', city: 'cities',
  character: 'characters', arashi: 'arashi', organization: 'organizations',
  family: 'families', history: 'history', magic: 'magic', language: 'languages',
};
const path = typeToPath[type] ?? type;
---

<a
  href={`/${path}/${slug}`}
  class="entity-card"
  style={accentColor ? `--card-accent: ${accentColor}` : ''}
>
  <div class="card-glow"></div>
  <div class="card-header">
    <span class="card-type">{type}</span>
    {meta && <span class="card-meta">{meta}</span>}
  </div>
  <h3 class="card-name">{name}</h3>
  {summary && <p class="card-summary">{summary}</p>}
  <div class="card-footer">
    <span class="card-cta">View Entry</span>
    <span class="card-arrow">â†’</span>
  </div>
</a>

<style>
  .entity-card {
    display: flex;
    flex-direction: column;
    background: color-mix(in srgb, var(--card-accent, var(--accent)), var(--bg-card) 92%);
    border: 1px solid rgba(255,255,255,0.06);
    border-radius: 12px;
    padding: 1.5rem;
    text-decoration: none;
    transition: border-color 0.3s, transform 0.3s, box-shadow 0.3s;
    position: relative;
    overflow: hidden;
  }
  .entity-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--card-accent, var(--accent)), transparent);
    transform: scaleX(0);
    transition: transform 0.4s ease;
  }
  .entity-card:hover {
    border-color: color-mix(in srgb, var(--card-accent, var(--accent)), transparent 60%);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px color-mix(in srgb, var(--card-accent, var(--accent)), transparent 80%);
  }
  .entity-card:hover::after { transform: scaleX(1); }
  .card-glow {
    position: absolute;
    top: -40px;
    right: -40px;
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: radial-gradient(circle, color-mix(in srgb, var(--card-accent, var(--accent)), transparent 70%) 0%, transparent 70%);
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.4s;
  }
  .entity-card:hover .card-glow { opacity: 1; }
  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }
  .card-type {
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--card-accent, var(--accent));
    font-family: var(--font-inter), sans-serif;
    background: color-mix(in srgb, var(--card-accent, var(--accent)), transparent 85%);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
  }
  .card-meta {
    font-size: 0.65rem;
    color: var(--text-muted);
    font-family: var(--font-inter), sans-serif;
  }
  .card-name {
    font-family: var(--font-cinzel), serif;
    font-size: 1.1rem;
    color: var(--text-primary);
    margin: 0 0 0.75rem;
    line-height: 1.3;
    transition: color 0.2s;
  }
  .entity-card:hover .card-name {
    color: var(--card-accent, var(--accent));
  }
  .card-summary {
    font-size: 0.82rem;
    font-family: var(--font-lora), serif;
    font-style: italic;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0 0 1.25rem;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: auto;
    padding-top: 0.75rem;
    border-top: 1px solid rgba(255,255,255,0.04);
  }
  .card-cta {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--text-muted);
    font-family: var(--font-inter), sans-serif;
    transition: color 0.2s;
  }
  .entity-card:hover .card-cta { color: var(--card-accent, var(--accent)); }
  .card-arrow {
    font-size: 1rem;
    color: var(--card-accent, var(--accent));
    transition: transform 0.2s;
  }
  .entity-card:hover .card-arrow { transform: translateX(4px); }
</style>
