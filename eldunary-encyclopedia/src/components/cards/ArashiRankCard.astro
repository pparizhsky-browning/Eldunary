---
interface Props {
  name: string;
  slug: string;
  rank: number;
  powerClass: string;
  race?: string;
  location?: string;
  summary?: string;
}
const { name, slug, rank, powerClass, race, location, summary } = Astro.props;
const rankColors: Record<number, string> = {
  0: '#FFFFFF', 1: '#FF0000', 2: '#FF4444', 3: '#FF8844',
  4: '#FFAA44', 5: '#FFCC44', 6: '#DDCC44', 7: '#AABB44',
  8: '#88BB66', 9: '#66AA88', 10: '#44AABB', 11: '#4488CC', 12: '#6666BB',
};
const color = rankColors[rank] ?? '#888888';
---
<a href={`/arashi/${slug}`} class="arashi-card" style={`--rank-color: ${color}`}>
  <div class="card-glow" aria-hidden="true" style={`background: radial-gradient(circle at 0% 50%, ${color}15, transparent 70%)`}></div>
  <div class="rank-column">
    <div class="rank-badge">#{rank}</div>
    <div class="power-orb" style={`background: ${color}; box-shadow: 0 0 15px ${color}`}></div>
  </div>
  <div class="card-body">
    <div class="card-meta-row">
      <span class="power-class">{powerClass}</span>
      {race && <span class="race-label">{race}</span>}
    </div>
    <h3 class="arashi-name">{name}</h3>
    {location && <p class="arashi-location"><span>üìç</span> {location}</p>}
    {summary && <p class="arashi-summary">{summary}</p>}
  </div>
  <div class="card-arrow">‚Üí</div>
</a>

<style>
  .arashi-card {
    display: flex;
    gap: 2rem;
    background: rgba(20, 20, 25, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-left: 4px solid var(--rank-color);
    border-radius: 12px;
    padding: 2rem;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    align-items: center;
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }
  .card-glow {
    position: absolute;
    inset: 0;
    pointer-events: none;
    opacity: 0.3;
    transition: opacity 0.4s ease;
  }
  .arashi-card:hover { 
    background: rgba(30, 30, 35, 0.9); 
    transform: translateX(10px);
    border-color: var(--rank-color);
    box-shadow: 0 15px 40px rgba(0,0,0,0.4);
  }
  .arashi-card:hover .card-glow { opacity: 0.6; }

  .rank-column {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    min-width: 4rem;
    position: relative;
    z-index: 1;
  }
  .rank-badge {
    font-family: var(--font-cinzel), serif;
    font-size: 2rem;
    font-weight: 900;
    color: var(--rank-color);
    text-shadow: 0 0 20px color-mix(in srgb, var(--rank-color), transparent 50%);
  }
  .power-orb {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    animation: pulse 2s infinite alternate;
  }
  @keyframes pulse {
    from { transform: scale(0.8); opacity: 0.5; }
    to { transform: scale(1.4); opacity: 1; }
  }

  .card-body { flex: 1; position: relative; z-index: 1; }
  .card-meta-row { display: flex; gap: 0.75rem; margin-bottom: 0.75rem; flex-wrap: wrap; }
  .power-class, .race-label {
    font-size: 0.7rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 2px 10px;
    border-radius: 4px;
  }
  .power-class { 
    background: color-mix(in srgb, var(--rank-color), transparent 90%); 
    color: var(--rank-color);
    border: 1px solid color-mix(in srgb, var(--rank-color), transparent 80%);
  }
  .race-label { 
    background: rgba(255,255,255,0.04); 
    color: #888;
    border: 1px solid rgba(255,255,255,0.08);
  }
  .arashi-name {
    font-family: var(--font-cinzel), serif;
    font-size: 1.6rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 0.75rem;
    transition: color 0.3s ease;
  }
  .arashi-card:hover .arashi-name { color: var(--rank-color); }

  .arashi-location { 
    font-size: 0.85rem; 
    color: #aaa; 
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }
  .arashi-location span { font-size: 1rem; }

  .arashi-summary { 
    font-family: var(--font-lora), serif;
    font-size: 0.95rem; 
    color: #71717A; 
    margin: 0; 
    line-height: 1.6;
    font-style: italic;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .card-arrow {
    font-size: 1.5rem;
    color: #333;
    transition: all 0.3s ease;
    padding-left: 1rem;
  }
  .arashi-card:hover .card-arrow { color: var(--rank-color); transform: translateX(5px); }
</style>
