---
interface Props {
  entityType: string;
  entityName: string;
}

const { entityType, entityName } = Astro.props;

const typeLabels: Record<string, string> = {
  race: 'Races',
  kingdom: 'Kingdoms',
  city: 'Cities',
  character: 'Characters',
  arashi: 'The Arashi',
  organization: 'Organizations',
  family: 'Families',
  history: 'History',
  magic: 'Magic',
  language: 'Languages',
};

const typeHrefs: Record<string, string> = {
  race: '/races',
  kingdom: '/kingdoms',
  city: '/cities',
  character: '/characters',
  arashi: '/arashi',
  organization: '/organizations',
  family: '/families',
  history: '/history',
  magic: '/magic',
  language: '/languages',
};

const label = typeLabels[entityType] ?? entityType;
const href = typeHrefs[entityType] ?? '/';
---

<nav class="breadcrumbs" aria-label="Breadcrumb">
  <ol>
    <li><a href="/">Home</a></li>
    <li aria-hidden="true">›</li>
    <li><a href={href}>{label}</a></li>
    <li aria-hidden="true">›</li>
    <li aria-current="page">{entityName}</li>
  </ol>
</nav>

<style>
  .breadcrumbs {
    margin-bottom: 1.5rem;
  }
  ol {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: 0.8rem;
    color: var(--text-muted);
  }
  a {
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.2s;
  }
  a:hover { color: var(--accent); }
  [aria-current="page"] { color: var(--text-secondary); }
</style>
