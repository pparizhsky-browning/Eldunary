---
import registry from '@generated/entity-registry.json';
import Logo from './Logo.astro';

const navLinks = [
  { label: 'Races', href: '/races' },
  { label: 'Kingdoms', href: '/kingdoms' },
  { label: 'Cities', href: '/cities' },
  { label: 'Characters', href: '/characters' },
  { label: 'Arashi', href: '/arashi' },
  { label: 'Organizations', href: '/organizations' },
  { label: 'Families', href: '/families' },
  { label: 'History', href: '/history' },
  { label: 'Magic', href: '/magic' },
  { label: 'Languages', href: '/languages' },
];

const typeRoutes: Record<string, string> = {
  race: 'races', kingdom: 'kingdoms', city: 'cities', character: 'characters',
  arashi: 'arashi', organization: 'organizations', family: 'families',
  history: 'history', magic: 'magic', language: 'languages',
};

// Slim payload for autocomplete
const entityData = (registry as any[]).map(e => ({ n: e.name, t: e.type, s: e.slug }));

const currentPath = Astro.url.pathname;
---

<header class="navbar" id="site-navbar" transition:persist>
  <nav class="navbar-inner">
    <a href="/" class="navbar-brand">
      <Logo class="brand-logo" />
      <span class="brand-text">ldunary</span>
    </a>

    <ul class="navbar-links">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={['nav-link', { active: currentPath.startsWith(link.href) }]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Expanding search overlay (clip-path animated from button's left edge) -->
    <div class="navbar-search-expand" id="navbar-search-expand" aria-hidden="true">
      <svg class="search-expand-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
      <input
        type="text"
        id="navbar-search-input"
        class="navbar-search-input"
        placeholder="Search Eldunary..."
        autocomplete="off"
        spellcheck="false"
        tabindex="-1"
        role="combobox"
        aria-autocomplete="list"
        aria-expanded="false"
        aria-controls="navbar-search-suggestions"
      />
      <button class="navbar-search-close" id="navbar-search-close" aria-label="Close search" tabindex="-1">âœ•</button>
    </div>

    <div class="navbar-actions">
      <a href="/map" class="nav-action-link" title="World Map">ğŸ—º</a>
      <a href="/graph" class="nav-action-link" title="Relation Graph">ğŸ•¸</a>
      <a href="/timeline" class="nav-action-link" title="Timeline">â³</a>
      <button
        id="search-trigger"
        class="nav-search-btn"
        aria-label="Search (Ctrl+K)"
        title="Search (Ctrl+K)"
      >
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
        <kbd>âŒ˜K</kbd>
      </button>
    </div>

    <!-- Mobile-only search trigger (left of hamburger) -->
    <button class="mobile-search-btn" id="mobile-search-btn" aria-label="Search">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
    </button>

    <button class="mobile-menu-btn" id="mobile-menu-toggle" aria-label="Toggle menu">
      <span></span><span></span><span></span>
    </button>

    <!-- Autocomplete suggestions (absolute within navbar-inner) -->
    <div class="search-suggestions" id="navbar-search-suggestions" role="listbox" aria-label="Search suggestions"></div>
  </nav>

  <!-- Mobile nav dropdown -->
  <div class="mobile-menu" id="mobile-menu">
    <ul>
      {navLinks.map((link) => (
        <li><a href={link.href} class="mobile-nav-link">{link.label}</a></li>
      ))}
      <li><a href="/map" class="mobile-nav-link">World Map</a></li>
      <li><a href="/graph" class="mobile-nav-link">Relation Graph</a></li>
      <li><a href="/timeline" class="mobile-nav-link">Timeline</a></li>
    </ul>
  </div>
</header>

<!-- Entity data injected for JS autocomplete -->
<script is:inline define:vars={{ entityData, typeRoutes }}>
  window.__eldunaryEntities = entityData;
  window.__eldunaryTypeRoutes = typeRoutes;
</script>

<script>
  // â”€â”€ DOM refs â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  const navbar     = document.getElementById('site-navbar') as HTMLElement;
  const expandEl   = document.getElementById('navbar-search-expand') as HTMLElement;
  const inputEl    = document.getElementById('navbar-search-input') as HTMLInputElement;
  const closeBtn   = document.getElementById('navbar-search-close') as HTMLButtonElement;
  const triggerBtn = document.getElementById('search-trigger') as HTMLButtonElement;
  const suggBox    = document.getElementById('navbar-search-suggestions') as HTMLElement;
  const mobileToggle      = document.getElementById('mobile-menu-toggle');
  const mobileMenu        = document.getElementById('mobile-menu');
  const mobileTriggerBtn  = document.getElementById('mobile-search-btn') as HTMLButtonElement;

  mobileToggle?.addEventListener('click', () => mobileMenu?.classList.toggle('open'));

  // â”€â”€ Position search expand precisely around brand + actions â”€â”€â”€â”€â”€â”€â”€â”€
  const navInner = navbar.querySelector('.navbar-inner') as HTMLElement;
  const brandEl  = navbar.querySelector('.navbar-brand') as HTMLElement;
  const actionsEl = navbar.querySelector('.navbar-actions') as HTMLElement;

  function updateSearchBounds() {
    if (!navInner || !brandEl) return;
    const isMobile = window.innerWidth <= 900;
    // On mobile, CSS vars are set via stylesheet â€” no JS needed
    if (isMobile) return;

    if (!actionsEl || !triggerBtn) return;
    const navRect     = navInner.getBoundingClientRect();
    const brandRect   = brandEl.getBoundingClientRect();
    const triggerRect = triggerBtn.getBoundingClientRect();
    const left  = Math.round(brandRect.right  - navRect.left + 14);
    const right = Math.max(4, Math.round(navRect.right - triggerRect.right - 4));
    navInner.style.setProperty('--search-expand-left',  left  + 'px');
    navInner.style.setProperty('--search-expand-right', right + 'px');
  }

  updateSearchBounds();
  window.addEventListener('resize', updateSearchBounds);

  // â”€â”€ Keep active link in sync after View Transitions â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function updateActiveLink() {
    const path = window.location.pathname;
    navbar.querySelectorAll<HTMLAnchorElement>('.nav-link').forEach(a => {
      const href = a.getAttribute('href') ?? '';
      a.classList.toggle('active', href !== '/' && path.startsWith(href));
    });
  }
  document.addEventListener('astro:page-load', updateActiveLink);

  type Entity = { n: string; t: string; s: string };
  const entities: Entity[] = (window as any).__eldunaryEntities ?? [];
  const typeRoutes: Record<string, string> = (window as any).__eldunaryTypeRoutes ?? {};

  function entityUrl(type: string, slug: string) {
    return '/' + (typeRoutes[type] ?? type + 's') + '/' + slug;
  }

  // â”€â”€ Open / close â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  let isOpen = false;

  function openSearch() {
    if (isOpen) return;
    isOpen = true;
    navbar.classList.add('search-active');
    expandEl.removeAttribute('aria-hidden');
    inputEl.removeAttribute('tabindex');
    closeBtn.removeAttribute('tabindex');
    setTimeout(() => inputEl.focus(), 60);
  }

  function closeSearch() {
    if (!isOpen) return;
    isOpen = false;
    navbar.classList.remove('search-active');
    expandEl.setAttribute('aria-hidden', 'true');
    inputEl.setAttribute('tabindex', '-1');
    closeBtn.setAttribute('tabindex', '-1');
    inputEl.value = '';
    hideSuggestions();
  }

  triggerBtn?.addEventListener('click', openSearch);
  mobileTriggerBtn?.addEventListener('click', () => {
    mobileMenu?.classList.remove('open'); // close hamburger menu if open
    openSearch();
  });
  closeBtn.addEventListener('click', closeSearch);

  document.addEventListener('keydown', (e: KeyboardEvent) => {
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') { e.preventDefault(); openSearch(); return; }
    if (e.key === 'Escape' && isOpen)               { e.preventDefault(); closeSearch(); return; }
    if (!isOpen) return;
    if (e.key === 'ArrowDown') { e.preventDefault(); moveCursor(1);  return; }
    if (e.key === 'ArrowUp')   { e.preventDefault(); moveCursor(-1); return; }
    if (e.key === 'Enter')     { e.preventDefault(); confirmSelection(); return; }
  });

  // â”€â”€ Autocomplete â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  let suggestions: Entity[] = [];
  let cursor = -1;

  function esc(s: string) {
    return s.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;');
  }

  function highlight(name: string, query: string): string {
    const safeQ = query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
    return esc(name).replace(new RegExp(`(${safeQ})`, 'gi'), '<mark>$1</mark>');
  }

  function renderSuggestions(query: string) {
    const q = query.trim().toLowerCase();
    if (!q) { hideSuggestions(); return; }

    suggestions = entities.filter(e => e.n.toLowerCase().includes(q)).slice(0, 8);
    if (!suggestions.length) { hideSuggestions(); return; }

    const typeColors: Record<string, string> = {
      character: '#9B7EDC', arashi: '#C49B5C', race: '#5CA87A', kingdom: '#5C9BC4',
      city: '#C4845C', organization: '#C45C5C', family: '#C4B85C',
      history: '#8A8A9A', magic: '#7A5CC4', language: '#5CB8C4',
    };
    const typeBg: Record<string, string> = {
      character: 'rgba(155,126,220,0.12)', arashi: 'rgba(196,155,92,0.14)', race: 'rgba(92,168,122,0.12)',
      kingdom: 'rgba(92,155,196,0.12)', city: 'rgba(196,132,92,0.12)', organization: 'rgba(196,92,92,0.12)',
      family: 'rgba(196,184,92,0.12)', history: 'rgba(138,138,154,0.12)', magic: 'rgba(122,92,196,0.12)',
      language: 'rgba(92,184,196,0.12)',
    };

    const rows = suggestions.map((e, i) => {
      const color = typeColors[e.t] ?? '#888';
      const bg    = typeBg[e.t]   ?? 'rgba(128,128,128,0.1)';
      const active = cursor === i ? ' sugg-active' : '';
      const hi = highlight(e.n, query.trim());
      return `<div class="sugg-item${active}" data-idx="${i}" role="option" aria-selected="${cursor === i}">` +
        `<span class="sugg-accent-bar" style="background:${color}"></span>` +
        `<span class="sugg-name">${hi}</span>` +
        `<span class="sugg-type-pill" style="color:${color};background:${bg};border-color:${color}30">${e.t}</span>` +
        `</div>`;
    }).join('');

    const footer = `<div class="sugg-footer" data-search-all="1">` +
      `<svg width="11" height="11" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" style="opacity:0.45;flex-shrink:0">` +
      `<circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/></svg>` +
      `<span>Search all results for <em>${esc(query.trim())}</em></span>` +
      `<span class="sugg-enter-hint">â†µ Enter</span>` +
      `</div>`;

    suggBox.innerHTML = rows + footer;
    suggBox.classList.add('open');
    inputEl.setAttribute('aria-expanded', 'true');
  }

  function hideSuggestions() {
    suggBox.innerHTML = '';
    suggBox.classList.remove('open');
    inputEl.setAttribute('aria-expanded', 'false');
    cursor = -1;
    suggestions = [];
  }

  function moveCursor(dir: number) {
    if (!suggestions.length) return;
    cursor = Math.max(-1, Math.min(suggestions.length - 1, cursor + dir));
    renderSuggestions(inputEl.value);
    suggBox.querySelector('.sugg-active')?.scrollIntoView({ block: 'nearest' });
  }

  function confirmSelection() {
    if (cursor >= 0 && suggestions[cursor]) {
      const e = suggestions[cursor];
      window.location.href = entityUrl(e.t, e.s);
    } else {
      const q = inputEl.value.trim();
      if (q) window.location.href = '/search?q=' + encodeURIComponent(q);
    }
  }

  inputEl.addEventListener('input', () => { cursor = -1; renderSuggestions(inputEl.value); });

  suggBox.addEventListener('mousedown', (e: MouseEvent) => {
    e.preventDefault(); // keep focus on input
    const searchAll = (e.target as HTMLElement).closest('[data-search-all]') as HTMLElement | null;
    if (searchAll) {
      const q = inputEl.value.trim();
      if (q) window.location.href = '/search?q=' + encodeURIComponent(q);
      return;
    }
    const item = (e.target as HTMLElement).closest('[data-idx]') as HTMLElement | null;
    if (!item) return;
    const entity = suggestions[parseInt(item.dataset.idx ?? '0', 10)];
    if (entity) window.location.href = entityUrl(entity.t, entity.s);
  });

  document.addEventListener('click', (e: MouseEvent) => {
    const target = e.target as Node;
    const insideSearch = expandEl.contains(target) || suggBox.contains(target)
      || triggerBtn?.contains(target) || mobileTriggerBtn?.contains(target);
    if (!insideSearch) {
      closeSearch();
    } else if (!suggBox.contains(target) && target !== inputEl) {
      hideSuggestions();
    }
  });
</script>

<style>
  /* â”€â”€ Base navbar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
