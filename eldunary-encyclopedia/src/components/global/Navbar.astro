    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 1.5rem;
    flex: 1;
    transition: opacity 0.2s ease;
  }
  .navbar.search-active .navbar-links { opacity: 0; pointer-events: none; }
  .nav-link {
    display: block;
    padding: 0.5rem 0;
    color: #9a9a9a;
    text-decoration: none;
    font-size: 0.75rem;
    font-weight: 700;
    font-family: var(--font-inter), sans-serif;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    transition: all 0.3s ease;
    position: relative;
  }
  .nav-link::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--accent);
    transform: scaleX(0);
    transition: transform 0.3s ease;
    transform-origin: right;
  }
  .nav-link:hover { color: #fff; }
  .nav-link.active { color: var(--accent); }
  .nav-link.active::after { transform: scaleX(1); transform-origin: left; }
  .nav-link:hover::after { transform: scaleX(1); transform-origin: left; }

  .navbar-actions {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    flex-shrink: 0;
    z-index: 2;
    transition: opacity 0.25s ease;
  }
  .nav-action-link {
    font-size: 1.2rem;
    text-decoration: none;
    opacity: 0.6;
    transition: opacity 0.3s, transform 0.3s;
  }
  .nav-action-link:hover { opacity: 1; transform: scale(1.1); }

  .nav-search-btn {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
    color: #888;
    padding: 0.45rem 0.9rem;
    border-radius: 6px;
    cursor: pointer;
    font-family: var(--font-inter), sans-serif;
    font-size: 0.78rem;
    font-weight: 500;
    letter-spacing: 0.04em;
    transition: background 0.25s, border-color 0.25s, color 0.25s, opacity 0.25s;
  }
  .nav-search-btn:hover {
    background: rgba(255,255,255,0.09);
    border-color: rgba(196,155,92,0.45);
    color: #ddd;
  }
  .nav-search-btn kbd {
    font-family: var(--font-inter), sans-serif;
    font-size: 0.68rem;
    background: rgba(0,0,0,0.35);
    padding: 2px 5px;
    border-radius: 4px;
    color: #555;
    border: 1px solid rgba(255,255,255,0.07);
    line-height: 1.4;
  }
  .btn-label { /* hide on narrow screens */ }
  @media (max-width: 1380px) { .btn-label { display: none; } }

  /* Fade out entire actions row when search is open */
  .navbar.search-active .navbar-actions {
    opacity: 0;
    pointer-events: none;
  }

  /*
   * â”€â”€ Expanding search overlay â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
   * Absolutely positioned over navbar-inner; clip-path sweeps from the
   * right (button position) leftward when search-active is toggled.
   *
   * inset(0 0 0 100%) = clipped completely (starts at right/button edge)
   * inset(0 0 0 0)    = fully visible (fills the nav area)
   */
  .navbar-search-expand {
    position: absolute;
    top: 10px; bottom: 10px;
    left: var(--search-expand-left, 220px);
    right: var(--search-expand-right, 0px);
    z-index: 10;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0 1rem 0 1.1rem;
    background: #0e0e12;
    border: 1px solid rgba(196,155,92,0.25);
    border-radius: 7px;
    /* start clipped from the right (button's position) */
    clip-path: inset(0 0 0 100% round 7px);
    transition: clip-path 0.38s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }
  .navbar.search-active .navbar-search-expand {
    clip-path: inset(0 0 0 0 round 7px);
    pointer-events: all;
  }

  .search-expand-icon {
    flex-shrink: 0;
    color: var(--accent, #C49B5C);
    opacity: 0.7;
  }
  .navbar-search-input {
    flex: 1;
    min-width: 0;
    background: transparent;
    border: none;
    outline: none;
    color: #F0EBE2;
    font-size: 0.85rem;
    font-family: var(--font-inter), sans-serif;
    font-weight: 400;
    letter-spacing: 0.03em;
    padding: 0;
    caret-color: var(--accent, #C49B5C);
  }
  .navbar-search-input::placeholder {
    color: rgba(255,255,255,0.22);
    font-style: italic;
  }
  .navbar-search-close {
    background: none;
    border: none;
    color: rgba(255,255,255,0.28);
    cursor: pointer;
    font-size: 0.85rem;
    padding: 0 0.15rem;
    line-height: 1;
    flex-shrink: 0;
    font-family: var(--font-inter), sans-serif;
    transition: color 0.18s;
  }
  .navbar-search-close:hover { color: rgba(255,255,255,0.85); }

  /* â”€â”€ Autocomplete dropdown â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .search-suggestions {
    display: none;
    position: absolute;
    left: var(--search-expand-left, 220px);
    right: var(--search-expand-right, 0px);
    top: calc(100% + 4px);
    background: #0d0d15;
    border: 1px solid rgba(196,155,92,0.22);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 24px 64px rgba(0,0,0,0.9), 0 0 0 1px rgba(255,255,255,0.03) inset;
    animation: sugg-drop 0.18s cubic-bezier(0.4,0,0.2,1);
    z-index: 999;
    max-height: 400px;
    overflow-y: auto;
  }
  .search-suggestions.open { display: block; }

  @keyframes sugg-drop {
    from { opacity: 0; transform: translateY(-8px) scale(0.98); }
    to   { opacity: 1; transform: translateY(0)    scale(1); }
  }

  .search-suggestions::-webkit-scrollbar { width: 4px; }
