---
import BaseLayout from './BaseLayout.astro';
import Navbar from '../components/global/Navbar.astro';
import Footer from '../components/global/Footer.astro';

interface Props {
  title: string;
  description?: string;
  accentColor?: string;
  noPadding?: boolean;
  showParticles?: boolean;
}

const { title, description, accentColor, noPadding = false, showParticles = false } = Astro.props;
---

<BaseLayout title={title} description={description} accentColor={accentColor} showParticles={showParticles}>
  <Navbar />
  <main class:list={['full-width-main', { 'no-padding': noPadding }]}>
    <slot />
  </main>
  <Footer />
</BaseLayout>

<style>
  .full-width-main {
    min-height: calc(100vh - 64px - 200px);
    padding: 2rem 1.5rem;
    max-width: 1400px;
    margin: 0 auto;
  }
  .full-width-main.no-padding {
    padding: 0;
    max-width: 100%;
  }
</style>
