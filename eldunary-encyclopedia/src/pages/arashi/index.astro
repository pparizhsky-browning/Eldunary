---
import { getCollection } from 'astro:content';
import FullWidthLayout from '../../layouts/FullWidthLayout.astro';
import ArashiRankCard from '../../components/cards/ArashiRankCard.astro';

const arashi = await getCollection('arashi');
const sorted = arashi.sort((a, b) => (a.data.rank ?? 99) - (b.data.rank ?? 99));
---
<FullWidthLayout title="Arashi Ranked â€” Eldunary" description="The Arashi power ranking list of Eldunary">
  <div class="listing-page">
    <header class="listing-header">
      <div class="header-content">
        <span class="listing-type">Criminal Organization</span>
        <h1 class="listing-title">The Arashi</h1>
        <p class="listing-desc">A powerful criminal organization with hidden underlying goals. Members are ranked #0 through #12. Member #0 is currently under investigation and their identity is unknown.</p>
      </div>
      <div class="header-accent" style="background: #9B5CC4; box-shadow: 0 0 15px #9B5CC4;"></div>
    </header>
    <div class="arashi-list">
      {sorted.map((a) => (
        <ArashiRankCard
          name={a.data.name}
          slug={a.slug}
          rank={a.data.rank ?? 99}
          powerClass={a.data.power_class ?? 'Unknown'}
          race={a.data.race}
          location={a.data.current_location}
          summary={a.data.summary}
        />
      ))}
    </div>
  </div>
</FullWidthLayout>

<style>
  .listing-page { max-width: 1000px; margin: 0 auto; padding: 6rem 2rem; }
  .listing-header {
    margin-bottom: 5rem;
    position: relative;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  .header-content { max-width: 800px; position: relative; z-index: 1; }
  .listing-type {
    font-size: 0.8rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: #9B5CC4;
    display: block;
    margin-bottom: 1rem;
    opacity: 0.7;
  }
  .listing-title {
    font-family: var(--font-cinzel), serif;
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 900;
    color: #fff;
    margin-bottom: 1.5rem;
    line-height: 1;
    text-shadow: 0 10px 40px rgba(0,0,0,0.6);
  }
  .listing-desc {
    font-family: var(--font-lora), serif;
    color: #9a9a9a;
    font-size: 1.25rem;
    line-height: 1.6;
    font-style: italic;
  }
  .header-accent {
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 200px;
    height: 4px;
    border-radius: 2px;
  }
  .arashi-list { display: flex; flex-direction: column; gap: 1.5rem; }
</style>
