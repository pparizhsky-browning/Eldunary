---
import { getCollection, getEntry } from 'astro:content';
import EntityLayout from '../../layouts/EntityLayout.astro';
import registry from '@generated/entity-registry.json';

const _nameMap = new Map((registry as any[]).map((e) => [e.slug, e.name]));
const _sn = (s: string) => _nameMap.get(s) ?? s.replace(/-/g, ' ').replace(/\b\w/g, (c) => c.toUpperCase());

export async function getStaticPaths() {
  const entries = await getCollection('cities');
  return entries.map((e) => ({ params: { slug: e.slug } }));
}

const { slug } = Astro.params;
const entry = await getEntry('cities', slug as string);
if (!entry) return Astro.redirect('/404');

const { Content } = await entry.render();
const d = entry.data;

const quickFacts: Record<string, string | string[]> = {};
if (d.kingdom) quickFacts['Kingdom'] = d.kingdom;
if (d.population) quickFacts['Population'] = String(d.population);
if (d.climate) quickFacts['Climate'] = d.climate;
const _of = d.outsider_friendliness ?? d.outsiderFriendliness;
if (_of) quickFacts['Outsider Friendliness'] = String(_of);
if (d.cityType) quickFacts['City Type'] = d.cityType;
if (d.economy) quickFacts['Economy'] = d.economy;
if (d.notable_landmarks) quickFacts['Landmarks'] = d.notable_landmarks;

const relatedEntities = [
  ...((d.related_characters ?? d.charactersPresent) ?? []).map((s: string) => ({ name: _sn(s), slug: s, type: 'character' })),
  ...((d.related_organizations ?? d.organizationsPresent) ?? []).map((s: string) => ({ name: _sn(s), slug: s, type: 'organization' })),
];
---
<EntityLayout
  title={d.name}
  description={d.summary ?? ''}
  entityType="city"
  slug={entry.slug}
  accentColor={d.accentColor}
  theme={d.theme}
  quickFacts={quickFacts}
  relatedEntities={relatedEntities}
  bannerTagline={d.tagline}
>
  <Content />
</EntityLayout>
