---
import { getCollection } from 'astro:content';
import FullWidthLayout from '../../layouts/FullWidthLayout.astro';
import EntityCard from '../../components/cards/EntityCard.astro';

const families = await getCollection('families');
const sorted = families.sort((a, b) => a.data.name.localeCompare(b.data.name));
---
<FullWidthLayout title="Noble Families of Eldunary" description="Great houses and dynasties of Eldunary">
  <div class="listing-page">
    <header class="listing-header">
      <div class="header-content">
        <span class="listing-type">Lineages & Dynasties</span>
        <h1 class="listing-title">Noble Families</h1>
        <p class="listing-desc">From the gold-rich Goldhelms to the ancient Ipadoraâ€”bloodlines are the truest currency of power in Eldunary.</p>
      </div>
      <div class="header-accent" style="background: #5CC4B9; box-shadow: 0 0 15px #5CC4B9;"></div>
    </header>
    <div class="listing-grid">
      {sorted.map((f) => (
        <EntityCard name={f.data.name} slug={f.slug} type="family" summary={f.data.summary} accentColor={f.data.accentColor} meta={f.data.motto} />
      ))}
    </div>
  </div>
</FullWidthLayout>
<style>
  .listing-page { max-width: 1400px; margin: 0 auto; padding: 6rem 2rem; }
  .listing-header {
    margin-bottom: 5rem;
    position: relative;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  .header-content { max-width: 800px; position: relative; z-index: 1; }
  .listing-type {
    font-size: 0.8rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: #5CC4B9;
    display: block;
    margin-bottom: 1rem;
    opacity: 0.7;
  }
  .listing-title {
    font-family: var(--font-cinzel), serif;
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 900;
    color: #fff;
    margin-bottom: 1.5rem;
    line-height: 1;
  }
  .listing-desc {
    font-family: var(--font-lora), serif;
    color: #9a9a9a;
    font-size: 1.25rem;
    line-height: 1.6;
    font-style: italic;
  }
  .header-accent {
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100px;
    height: 3px;
  }
  .listing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    animation: grid-fade-up 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }
  @keyframes grid-fade-up {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
