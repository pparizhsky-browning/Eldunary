---
import FullWidthLayout from '../layouts/FullWidthLayout.astro';
import GraphExplorer from '../components/interactive/GraphExplorer';
import { readFileSync, existsSync } from 'fs';
import { join } from 'path';

const graphFile = join(process.cwd(), 'generated', 'graph-data.json');
const graphData = existsSync(graphFile)
  ? JSON.parse(readFileSync(graphFile, 'utf-8'))
  : { nodes: [], edges: [] };
---
<FullWidthLayout title="Connection Graph — Eldunary" description="D3 relationship graph of all Eldunary entities" noPadding>
  <div class="graph-page">
    <header class="graph-header">
      <h1 class="graph-title">Connection Graph</h1>
      <p class="graph-desc">
        {graphData.nodes.length} entities &nbsp;·&nbsp; {graphData.edges.length} connections
      </p>
    </header>
    <div class="graph-container">
      <GraphExplorer data={graphData} client:load />
    </div>
  </div>
</FullWidthLayout>

<style>
  .graph-page { display: flex; flex-direction: column; height: calc(100vh - 64px); }

  .graph-header {
    padding: 1rem 1.5rem 0.9rem;
    border-bottom: 1px solid rgba(255,255,255,0.07);
    flex-shrink: 0;
    display: flex;
    align-items: baseline;
    gap: 1.2rem;
    background: linear-gradient(to bottom, rgba(20,14,8,0.55), transparent);
  }
  .graph-title {
    font-family: var(--font-cinzel), serif;
    font-size: 1.35rem;
    color: var(--text-primary);
    margin: 0;
    letter-spacing: 0.05em;
    text-shadow: 0 0 30px rgba(196,155,92,0.25);
  }
  .graph-desc {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin: 0;
    font-variant-numeric: tabular-nums;
    opacity: 0.7;
  }

  .graph-container {
    flex: 1;
    min-height: 0;
    position: relative;
    /* subtle dot-grid atmosphere */
    background-image: radial-gradient(circle, rgba(255,255,255,0.04) 1px, transparent 1px);
    background-size: 28px 28px;
  }
  .graph-container > * { height: 100% !important; }
  .graph-container astro-island,
  .graph-container astro-island > div { display: block !important; height: 100% !important; }
</style>
